<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/langwid_5"
    tools:context=".MainActivity_Get_started">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#FF6600"
        android:paddingTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a useful tool that helps you learn Japanese more effectively"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:padding="30dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/langwid_1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First let see how the app will benefit you"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="80dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageButton
            android:id="@+id/btn_getstarted"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/langwid_6"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get started  >"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginLeft="139dp"
            android:layout_marginTop="27dp"/>
    </FrameLayout>


</LinearLayout>